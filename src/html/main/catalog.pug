section.catalog
  h1.title Каталог интернет-магазина sdp.
  .container.catalog__container
    .catalog__filter.filter
      h3.filter__title Фильтровать по:
      ul.filter__list
        li.filter__param
          button.filter__name Категория
          ul.filter__category-list
            each text in ['Диваны', 'Кресла', 'Пуфы', 'Кровати', 'Тумбы', 'Комоды', 'Стулья', 'Столы', 'Аксессуары']
              li.filter__category-item
                label.custom.custom--check-label
                  input.custom.custom--check(type="checkbox")
                  span.custom.custom--checkbox.custom--checkbox-filter= text
        li.filter__param
          button.filter__name Цена
          .filter__options-price.js-filter-price-options
            label.filter__range-text от
              input.filter__range-input.js-filter-price-from(type="text")
            label.filter__range-text до
              input.filter__range-input.js-filter-price-to(type="text")
          .filter__range-slider

    h2.container__title.catalog__title Каталог

